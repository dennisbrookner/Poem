<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.poetryhelper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.poetryhelper.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.poetryhelper.NewPoemPage"
            android:label="@string/title_activity_new_poem_page"
            android:parentActivityName="com.example.poetryhelper.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.poetryhelper.MainActivity" />
        </activity>
        <activity
            android:name="com.example.poetryhelper.Free_Verse_Template"
            android:label="@string/title_activity_free__verse__template"
            android:parentActivityName="com.example.poetryhelper.NewPoemPage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.poetryhelper.NewPoemPage" />
        </activity>
    </application>

</manifest>
